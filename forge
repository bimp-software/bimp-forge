#!/usr/bin/env php
<?php

require __DIR__ . '/vendor/autoload.php';

use Dotenv\Dotenv;
use Bimp\Forge\Foundation\Bootstrap;
use Bimp\Forge\Console\Forge;

$env = Dotenv::createImmutable(__DIR__);
$env->load();

require __DIR__ . '/storage/src/forge/foundation/Bootstrap.php';
require __DIR__ . '/storage/src/forge/configuration/Bootstrap.php';

define('FORGE_START', microtime(true));

Bootstrap::ensure(__DIR__);

exit((new Forge())->run($argv));